<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" style="@android:style/Theme.Holo">
    <Button
            android:text="0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button0"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonDec" android:layout_marginStart="8dp"/>
    <Button
            android:text="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button0"/>
    <Button
            android:text="2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button2"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDec"/>
    <Button
            android:text="3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button3"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button4"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <Button
            android:text="7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button7"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button4"
            android:gravity="center"/>
    <Button
            android:text="8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button8"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button9"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button8" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="-"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonSubtract"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonAdd"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonDivide"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonMultiply"
            android:text="รท"/>
    <Button
            android:text="*"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonMultiply"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonSubtract"/>
    <Button
            android:text="+"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonAdd"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEquals"/>
    <Button
            android:text="5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button5"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
            android:text="6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button6"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="."
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonDec"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/buttonEquals"
            android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:textSize="40dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textAppearance="@android:style/TextAppearance.Holo"
            android:textSize="64sp" android:textIsSelectable="true" android:gravity="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonClear"/>
    <Button
            android:text="C"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonClear"
            android:textSize="36sp"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button7"/>
    <Button
            android:text="xยฒ"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonSqr"
            android:textSize="36sp"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintStart_toEndOf="@+id/buttonSqrt"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button9"/>
    <Button
            android:text="โ"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/buttonSqrt"
            android:textSize="36sp"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintStart_toEndOf="@+id/buttonClear" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button8"/>
</android.support.constraint.ConstraintLayout>